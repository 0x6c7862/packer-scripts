{
  "description": "Create an Ubuntu 14.04 box",
  "variables": {
    "atlas_token": "{{env `ATLAS_TOKEN`}}"
  },
  "builders": [{
    "name": "ubuntu-14.04-amd64",
    "vm_name": "ubuntu-14.04-amd64",
    "iso_url": "http://releases.ubuntu.com/14.04.5/ubuntu-14.04.5-server-amd64.iso",
    "iso_checksum": "dde07d37647a1d2d9247e33f14e91acb10445a97578384896b4e1d985f754cc1",
    "iso_checksum_type": "sha256",
    "http_directory": "src/ubuntu-14.04",
    "boot_command": [
      "<esc><esc><enter><wait>/install/vmlinuz initrd=/install/initrd.gz",
      " auto-install/enable=true netcfg/get_hostname=ubuntu-1404-amd64",
      " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<enter>"
    ],
    "shutdown_command": "halt -p",
    "type": "qemu",
    "qemuargs": [["-m", "512"]],
    "machine_type": "q35",
    "accelerator": "kvm",
    "disk_compression": true,
    "disk_size": 65536,
    "format": "qcow2",
    "headless": true,
    "ssh_username": "root",
    "ssh_password": "packer",
    "ssh_timeout": "24h",
    "boot_wait": "30s"
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": ["src/ubuntu-14.04/provision.sh"],
    "remote_folder": "/dev/shm"
  }],
  "post-processors": [[{
    "type": "vagrant",
    "keep_input_artifact": false,
    "compression_level": 9,
    "vagrantfile_template": "share/Vagrantfile"
  }, {
    "type": "atlas",
    "token": "{{user `atlas_token`}}",
    "artifact": "lxb/ubuntu-14.04-amd64",
    "artifact_type": "vagrant.box",
    "metadata": {
      "provider": "libvirt"
    }
  }]]
}
